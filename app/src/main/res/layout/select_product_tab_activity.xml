<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/select_product_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/color_333333"
        app:tabSelectedTextColor="@color/color_333333"
        app:tabTextColor="@color/color_666666">

    </android.support.design.widget.TabLayout>

    <com.example.administrator.reservationnotesactivity.MyTabViewPager
        android:id="@+id/select_product_viewpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true">

    </com.example.administrator.reservationnotesactivity.MyTabViewPager>


</LinearLayout>