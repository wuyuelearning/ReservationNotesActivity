<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/cost_detail_item_ll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/cost_include_item_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="jiaodtong"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:background="@drawable/frame_to_title"
            />

        <TextView
            android:id="@+id/cost_include_item_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="qiche"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:background="@drawable/frame_to_detail"

            />



    </LinearLayout>



</LinearLayout>